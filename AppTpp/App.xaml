                <ResourceDictionary Source="/Styles/MainWindow/Navigation/_UserManagerButton/Navigation_UserManagerButton.xaml" />
                <ResourceDictionary Source="/Styles/MainWindow/Navigation/_LogoutButton/Navigation_LogoutButton.xaml" />

                <ResourceDictionary Source="/Styles/MainWindow/Content/Content.xaml" />

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Application.Resources>

</Application>
