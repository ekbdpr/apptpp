<UserControl
    x:Class="AppTpp.View.UserInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:AppTpp.ViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    UseLayoutRounding="True"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:UserInfoVM />
    </UserControl.DataContext>

    <StackPanel Margin="0,10,30,10" Orientation="Horizontal">

        <Button
            Width="30"
            Height="30"
            Margin="0,0,10,0"
            Command="{Binding ChangeImageCommand}"
            Cursor="Hand"
            Style="{StaticResource RemoveButtonHover}">
            <Button.Background>

                <ImageBrush ImageSource="/Images/avatar.png" Stretch="Uniform" />

            </Button.Background>
        </Button>

        <TextBlock
            VerticalAlignment="Center"
            FontSize="15"
            Style="{StaticResource Text_Style}">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0} ({1})">
                    <Binding Path="Name" />
                    <Binding Path="Privilege" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

    </StackPanel>

</UserControl>
